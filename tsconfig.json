{
	"compilerOptions": {
		"outDir": "lib",
		"baseUrl": ".",
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"jsx": "react",
		"noImplicitReturns": false,
		"noUnusedParameters": false,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"lib": ["esnext", "dom"],
		"paths": {
			"/web_modules/*.js": ["node_modules/@types/*", "node_modules/*", "web_modules/*.js"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "web_modules"]
}
